<?xml version="1.0" encoding="utf-8"?>
<!--
    User Message Item Layout
    
    This layout displays a user message in the chat.
    User messages are aligned to the right.
-->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Message Bubble -->
    <LinearLayout
        android:id="@+id/message_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_user"
        android:maxWidth="@dimen/message_max_width"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Message Content -->
        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/message_user_text"
            android:textSize="16sp"
            tools:text="Hello, this is a user message!" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/text_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:textColor="@color/message_user_text"
            android:textSize="11sp"
            android:alpha="0.7"
            tools:text="12:00" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
