<?xml version="1.0" encoding="utf-8"?>
<!--
    New Chat Dialog Layout
    
    This layout is used for creating a new chat with provider/model selection.
-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Provider Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_provider"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/spinner_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Model Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/select_model"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/spinner_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Chat Name (Optional) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_chat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/chat_name_optional"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_chat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Advanced Settings Toggle -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_advanced_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/advanced_settings"
            style="@style/Widget.Material3.Button.TextButton"
            app:icon="@drawable/ic_expand_more"
            app:iconGravity="end" />

        <!-- Advanced Settings Container -->
        <LinearLayout
            android:id="@+id/layout_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- System Prompt -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_system_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/system_prompt"
                app:endIconMode="clear_text"
                app:helperText="@string/system_prompt_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_system_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="5"
                    android:gravity="top|start" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Temperature Slider -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/temperature"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_temperature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0.0"
                    android:valueTo="2.0"
                    android:stepSize="0.1"
                    android:value="1.0" />

                <TextView
                    android:id="@+id/text_temperature_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="1.0"
                    android:textSize="14sp"
                    android:minWidth="40dp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Top P Slider -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/top_p"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_top_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:stepSize="0.05"
                    android:value="1.0" />

                <TextView
                    android:id="@+id/text_top_p_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="1.0"
                    android:textSize="14sp"
                    android:minWidth="40dp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Max Context Messages -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_max_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/max_context_messages"
                app:helperText="@string/max_context_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_max_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="20" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Max Tokens -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_max_tokens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/max_tokens"
                app:helperText="@string/max_tokens_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_max_tokens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="4096" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Streaming Response -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_streaming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/streaming_response"
                android:checked="true" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
