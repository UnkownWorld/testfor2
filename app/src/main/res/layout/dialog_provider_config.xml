<?xml version="1.0" encoding="utf-8"?>
<!--
    Provider Config Dialog Layout
    Supports apiHost + apiPath + apiMode configuration
-->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- API Key Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_api_key"
        style="@style/Widget.Chatbox.Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/api_key"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_api_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- API Host Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_api_host"
        style="@style/Widget.Chatbox.Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/api_host"
        app:helperText="@string/api_host_helper"
        app:helperTextEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_api_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- API Mode Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/api_mode"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary" />

    <RadioGroup
        android:id="@+id/radio_api_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_mode_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/api_mode_chat"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_mode_responses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/api_mode_responses" />

    </RadioGroup>

    <!-- API Path Input (Optional) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_api_path"
        style="@style/Widget.Chatbox.Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/api_path"
        app:helperText="@string/api_path_helper"
        app:helperTextEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_api_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
