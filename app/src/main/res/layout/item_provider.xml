<?xml version="1.0" encoding="utf-8"?>
<!--
    Provider Item Layout
    
    This layout displays a single provider item in the list.
-->
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Provider Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Provider Name -->
            <TextView
                android:id="@+id/text_provider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="OpenAI" />

            <!-- Status -->
            <TextView
                android:id="@+id/text_provider_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                tools:text="Configured" />

        </LinearLayout>

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/image_provider_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/status"
            tools:src="@drawable/ic_check_circle" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
