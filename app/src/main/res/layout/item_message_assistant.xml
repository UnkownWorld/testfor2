<?xml version="1.0" encoding="utf-8"?>
<!--
    Assistant Message Item Layout
    
    This layout displays an assistant message in the chat.
    Assistant messages are aligned to the left.
-->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Message Bubble -->
    <LinearLayout
        android:id="@+id/message_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_assistant"
        android:maxWidth="@dimen/message_max_width"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Message Content -->
        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/message_assistant_text"
            android:textSize="16sp"
            tools:text="Hello! I'm an AI assistant. How can I help you today?" />

        <!-- Timestamp and Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Generating Indicator -->
            <ProgressBar
                android:id="@+id/progress_generating"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/text_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/message_assistant_text"
                android:textSize="11sp"
                android:alpha="0.7"
                tools:text="12:00" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
