<?xml version="1.0" encoding="utf-8"?>
<!--
    Preferences XML
    
    This file defines the settings UI structure.
-->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Appearance Category -->
    <PreferenceCategory
        android:title="@string/appearance"
        >

        <!-- Theme -->
        <ListPreference
            android:key="theme"
            android:title="@string/theme"
            android:summary="%s"
            android:defaultValue="system"
            android:entries="@array/theme_entries"
            android:entryValues="@array/theme_values"
             />

        <!-- Dynamic Colors -->
        <SwitchPreferenceCompat
            android:key="dynamic_colors"
            android:title="@string/dynamic_colors"
            android:summary="@string/dynamic_colors_summary"
            android:defaultValue="true"
             />

    </PreferenceCategory>

    <!-- API Settings Category -->
    <PreferenceCategory
        android:title="@string/api_settings"
        >

        <!-- API Configuration -->
        <Preference
            android:key="api_configuration"
            android:title="@string/api_configuration"
            android:summary="Configure AI providers and API keys"
             />

    </PreferenceCategory>

    <!-- Chat Settings Category -->
    <PreferenceCategory
        android:title="@string/chat_settings"
        >

        <!-- Show Timestamp -->
        <SwitchPreferenceCompat
            android:key="show_timestamp"
            android:title="@string/show_timestamp"
            android:defaultValue="true"
             />

        <!-- Show Token Count -->
        <SwitchPreferenceCompat
            android:key="show_token_count"
            android:title="@string/show_token_count"
            android:defaultValue="false"
             />

        <!-- Render Markdown -->
        <SwitchPreferenceCompat
            android:key="render_markdown"
            android:title="@string/render_markdown"
            android:defaultValue="true"
             />

        <!-- Code Highlighting -->
        <SwitchPreferenceCompat
            android:key="code_highlighting"
            android:title="@string/code_highlighting"
            android:defaultValue="true"
             />

        <!-- Send on Enter -->
        <SwitchPreferenceCompat
            android:key="send_on_enter"
            android:title="@string/send_on_enter"
            android:defaultValue="true"
             />

        <!-- Auto Scroll -->
        <SwitchPreferenceCompat
            android:key="auto_scroll"
            android:title="@string/auto_scroll"
            android:defaultValue="true"
             />

        <!-- Streaming Responses -->
        <SwitchPreferenceCompat
            android:key="streaming_responses"
            android:title="@string/streaming_responses"
            android:summary="@string/streaming_summary"
            android:defaultValue="true"
             />

    </PreferenceCategory>

    <!-- Privacy Category -->
    <PreferenceCategory
        android:title="@string/privacy"
        >

        <!-- Analytics -->
        <SwitchPreferenceCompat
            android:key="analytics_enabled"
            android:title="@string/analytics_enabled"
            android:defaultValue="false"
             />

        <!-- Crash Reporting -->
        <SwitchPreferenceCompat
            android:key="crash_reporting"
            android:title="@string/crash_reporting"
            android:defaultValue="true"
             />

        <!-- Clear Data -->
        <Preference
            android:key="clear_data"
            android:title="@string/clear_data"
            android:summary="Delete all chats and settings"
             />

    </PreferenceCategory>

</PreferenceScreen>
